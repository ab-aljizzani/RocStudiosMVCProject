@model RocStudiosMVCProject.Models.Account
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

@using (Html.BeginForm("Create", "Account"))
{
    <div class=" container pt-20">
        <div class="h-4/5 flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
            <div class="max-w-md w-full space-y-8">

                <h1>Add New User</h1>

                <div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.firstName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { @class = "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-secodary focus:border-secodary focus:z-10 sm:text-sm" } })
                            @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-red-700" })
                        </div>
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.lastName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.lastName, new { htmlAttributes = new { @class = "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-secodary focus:border-secodary focus:z-10 sm:text-sm" } })
                            @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "text-red-700" })
                        </div>
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-secodary focus:border-secodary focus:z-10 sm:text-sm" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-red-700" })
                        </div>
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-secodary focus:border-secodary focus:z-10 sm:text-sm" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-red-700" })
                        </div>
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.conFirmPass, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.conFirmPass, new { htmlAttributes = new { @class = "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-secodary focus:border-secodary focus:z-10 sm:text-sm" } })
                            @Html.ValidationMessageFor(model => model.conFirmPass, "", new { @class = "text-red-700" })
                        </div>
                    </div>
                </div>

                @Html.AntiForgeryToken() 

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-primary hover:bg-secodary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secodary" />
                    </div>
                </div>

            </div>
        </div>
    </div>
}

