@model RocStudiosMVCProject.Models.ForgetPassword
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
    Reset Your Password
</h2>


@using (Html.BeginForm())
{

    <form class="mt-8 space-y-6" action="Index" method="POST">



        <div class="rounded-md shadow-sm space-y-2">
            <div>

                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-secodary focus:border-secodary focus:z-10 sm:text-sm", @placeholder = "Enter A Username", @name = "username" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-red-700 " })
            </div>
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <br />
                    @if (ViewBag.message != null)
                    { <label class="text-red-700">@ViewBag.message</label>}
                </div>
            </div>
            <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-primary hover:bg-secodary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secodary">
                    Send Password
                </button>
            </div>

        </div>
    </form>
}


